---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<main class="grid place-items-center">
			<slot />
		</main>
		<Footer />
	</body>
</html>
<style is:global>
	*{
		font-family:'buffetAbogados', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
		scroll-behavior: smooth;
	}
	body{
		font-weight: 500;
		background-color: rgb(255, 255, 255);
		line-height: 3rem;
	}
	@font-face {
		font-family: 'buffetAbogados';
		src: url('/fonts/Lora-Regular.ttf');
	}
	
	.blur-b {
		mask-image: linear-gradient(#000000 80%, transparent);
	}
	.blur-l {
		mask-image: linear-gradient(to left, #000000 80%, transparent);
	}
	h2{
		color:#9b7702;
		font-weight: bold;
		line-height: 2.3rem;
		font-size: 2rem;
	}
	@media (min-width: 768px) {
		h2{
			font-size: 3rem;
		}
		p {
			font-size: 1.5rem;
		}
	}
</style>

